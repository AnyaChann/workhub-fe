# Environment
NODE_ENV=development
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true

# Application
REACT_APP_NAME=WorkHub
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=Job Portal Platform

# API Configuration - ✅ Match backend exactly
REACT_APP_API_URL=http://localhost:8080/workhub/api/v1
REACT_APP_API_TIMEOUT=30000

# Authentication - ✅ Match backend JWT secret
REACT_APP_JWT_SECRET=a-string-secret-at-least-256-bits-long
REACT_APP_JWT_EXPIRES_IN=7d
REACT_APP_REFRESH_TOKEN_EXPIRES_IN=30d

# Debug Settings
REACT_APP_DEBUG_ENABLED=true
REACT_APP_SHOW_DEBUG_PANEL=false
REACT_APP_ENABLE_LOGGING=true

# External Services
REACT_APP_GOOGLE_MAPS_API_KEY=your-google-maps-api-key
REACT_APP_STRIPE_PUBLIC_KEY=your-stripe-public-key
REACT_APP_STRIPE_SECRET_KEY=your-stripe-secret-key

# File Upload
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx
REACT_APP_UPLOAD_URL=http://localhost:8080/workhub/api/v1/upload

# Email Configuration
REACT_APP_EMAIL_SERVICE=gmail
REACT_APP_EMAIL_USER=your-email@gmail.com
REACT_APP_EMAIL_PASS=your-app-password

# Social Login
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id
REACT_APP_LINKEDIN_CLIENT_ID=your-linkedin-client-id

# Database (for reference - not used in frontend)
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=workhub_db
DB_USERNAME=root
DB_PASSWORD=

# Redis (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# App URLs
REACT_APP_BASE_URL=http://localhost:3000

# Feature Flags
REACT_APP_ENABLE_CHAT=true
REACT_APP_ENABLE_VIDEO_INTERVIEW=false
REACT_APP_ENABLE_NOTIFICATIONS=true
REACT_APP_ENABLE_ANALYTICS=true

# Third-party Integration
REACT_APP_ANALYTICS_ID=your-google-analytics-id
REACT_APP_HOTJAR_ID=your-hotjar-id
REACT_APP_SENTRY_DSN=your-sentry-dsn

# Development Tools
REACT_APP_MOCK_API=false
REACT_APP_ENABLE_DEVTOOLS=true
REACT_APP_SHOW_PERFORMANCE_METRICS=false

# Security
REACT_APP_ENABLE_CSP=true
REACT_APP_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Localization
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,vi

# Payment
REACT_APP_CURRENCY=USD
REACT_APP_PAYMENT_METHODS=stripe,paypal

# Job Posting Limits
REACT_APP_FREE_JOB_LIMIT=3
REACT_APP_PREMIUM_JOB_LIMIT=50
REACT_APP_ENTERPRISE_JOB_LIMIT=unlimited

# Search & Filtering
REACT_APP_MAX_SEARCH_RESULTS=100
REACT_APP_SEARCH_DEBOUNCE_TIME=300

# Image & Media
REACT_APP_DEFAULT_AVATAR=https://via.placeholder.com/150
REACT_APP_DEFAULT_COMPANY_LOGO=https://via.placeholder.com/200x100
REACT_APP_CDN_URL=https://cdn.workhub.com

# Notifications
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_VAPID_PUBLIC_KEY=your-vapid-public-key

# Testing
REACT_APP_TEST_MODE=false
REACT_APP_MOCK_DELAY=1000

# Logging
REACT_APP_LOG_LEVEL=debug
REACT_APP_LOG_TO_CONSOLE=true
REACT_APP_LOG_TO_SERVER=false